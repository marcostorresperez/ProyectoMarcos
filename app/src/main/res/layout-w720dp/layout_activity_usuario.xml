    <fragment
        android:id="@+id/FrgDetalle"
        class="com.example.proyectomarcos.fragment.Activity_Fragment_Detalle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.60" />
</LinearLayout>
