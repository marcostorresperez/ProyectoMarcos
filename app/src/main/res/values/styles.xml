<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textos">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/marron</item>
    </style>

    <style name="campos">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/marron</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="botones">
        <item name="android:background">@color/verde</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:radius">50dp</item>
    </style>

    <style name="dialogs">
        <item name="android:textSize">24sp</item>
        <item name="android:background">#6EB1E1</item>
        <item name="android:textColor">#F0582F</item>
    </style>

    <style name="titulos">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32dp
        </item>
        <item name="android:background">@color/marron</item>
    </style>


    <!--  ESTILOS LARGE  -->
    <style name="textosLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36dp</item>
        <item name="android:background">@color/marron</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="botonesLarge">
        <item name="android:background">@color/verde</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:radius">50dp</item>
        <item name="android:textSize">36dp</item>
    </style>


    <style name="titulosLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">64dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/marron</item>
    </style>

    <style name="camposLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36dp</item>
        <item name="android:background">@color/marron</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>